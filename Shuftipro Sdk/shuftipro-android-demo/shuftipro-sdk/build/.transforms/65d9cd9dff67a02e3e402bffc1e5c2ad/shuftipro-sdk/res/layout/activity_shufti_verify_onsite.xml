<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <WebView
        android:visibility="visible"
        android:id="@+id/webViewLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <RelativeLayout
        android:id="@+id/rl_progress_update"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:layout_centerVertical="true"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            tools:ignore="WebViewLayout">

        <WebView
            android:id="@+id/extraction_preloader_gf"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:adjustViewBounds="false"
            android:layout_above="@id/main_tv"
            android:layout_centerHorizontal="true"
            android:visibility="visible"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Request has been received"
            android:textColor="@color/charcol_blue"
            android:textSize="16dp"
            android:id="@+id/main_tv"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:fontFamily="@font/opensans_regular">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Wait..."
            android:textColor="@color/charcol_blue"
            android:layout_below="@id/main_tv"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            android:gravity="center"
            android:fontFamily="@font/opensans_semibold">
        </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/terms_and_condition_retake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="7dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="Â©"
                android:textColor="@color/charcol_blue"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:gravity="center_vertical"
                android:text="Powered by"
                android:textColor="@color/charcol_blue"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/shufti_tm_retake"
                android:layout_width="70dp"
                android:layout_height="22dp"
                android:layout_marginLeft="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_shufti_tm" />
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>