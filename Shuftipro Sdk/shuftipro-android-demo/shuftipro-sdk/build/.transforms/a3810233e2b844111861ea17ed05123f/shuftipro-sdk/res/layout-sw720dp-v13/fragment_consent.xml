<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/first"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:text="@string/consent_heading"
            android:gravity="center"
            android:textColor="@color/charcol_blue"
            android:textSize="50dp"
            android:fontFamily="@font/opensans_semibold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:text="@string/help_us_consent_subheading"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/charcol_blue"
            android:textSize="58dp"
            android:fontFamily="@font/opensans_semibold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_below="@id/first"
        android:id="@+id/second"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:text="@string/identity_verification_consent"
            android:textColor="@color/charcol_blue"
            android:fontFamily="@font/opensans_regular"
            android:layout_marginStart="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:layout_marginTop="10dp"
            android:text="@string/decleration_of_consent"
            android:textColor="@color/charcol_blue"
            android:fontFamily="@font/opensans_regular"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/second">

        <ImageView
            android:layout_width="50dp"
            android:src="@drawable/radio_icon_uncheck"
            android:layout_height="50dp"
            android:id="@+id/check"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp">
        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:textSize="40dp"
            android:fontFamily="@font/opensans_bold"
            android:textColor="@color/charcol_blue"
            android:id="@+id/link_tv"
            android:textColorLink="@color/shuftipro_blue"
            android:text="@string/agree">
        </TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@id/terms_and_condition"
        android:layout_marginTop="30dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:padding="25dp"
                android:id="@+id/con_btn"
                android:enabled="false"
                android:background="@color/light_grey"
                android:text="@string/yes_con"
                android:fontFamily="@font/opensans_semibold"
                android:textAllCaps="false"
                android:textSize="22sp"
                android:textColor="@color/white_color" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/stroke_border"
                android:padding="25dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/cancel_btn"
                android:text="@string/no_cancel"
                android:textAllCaps="false"
                android:textSize="22sp"
                android:fontFamily="@font/opensans_semibold"
                android:textColor="@color/charcol_blue" />


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
    android:padding="10dp"
    android:id="@+id/terms_and_condition"
    android:gravity="center"
    android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:text="Â©"
        android:textSize="20sp"
        android:textColor="@color/color_terms_conds"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content" >
    </TextView>
    <TextView
        android:layout_marginLeft="2dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Powered by"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:textColor="@color/color_terms_conds"
        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="42dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_shufti_tm"
        android:layout_marginLeft="2dp"
        android:id="@+id/shufti_tm"/>
    </LinearLayout>





</RelativeLayout>





