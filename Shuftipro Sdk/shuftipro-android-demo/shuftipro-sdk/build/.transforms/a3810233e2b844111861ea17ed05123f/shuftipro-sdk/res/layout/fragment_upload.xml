<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:clickable="true"
    android:orientation="vertical">


    <TextView
        android:id="@+id/headingTextView"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/opensans_semibold"
        android:textColor="@color/charcol_blue"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textStyle="bold"
        android:visibility="visible"
        android:text="@string/verification"/>


    <TextView
        android:id="@+id/upload_screen_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headingTextView"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/opensans_regular"
        android:text="@string/after_upload"
        android:textColor="@color/charcol_blue"
        android:textSize="18sp"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/confirm_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upload_screen_instruction"
        android:layout_above="@id/below_layout"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_margin="15dp"
            android:layout_height="wrap_content"
            android:id="@+id/uploadedImage"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <VideoView
                android:id="@+id/video_preview_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:visibility="gone" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/play_btn"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:visibility="gone"
                android:src="@drawable/ic_video_pause">
            </ImageView>


        </FrameLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/dotted_rectangle_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/border_background_white"
        android:visibility="visible">


        <ImageView
            android:id="@+id/uploadImage"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:src="@drawable/cloud_upload" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/uploadImage"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/opensans_regular"
            android:text="@string/browes_file"
            android:textAlignment="center"
            android:textColor="#7180AF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/maxsize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/opensans_regular"
            android:text="@string/max_photo"
            android:textAlignment="center"
            android:textColor="#7180AF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/vid_max"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maxsize"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/opensans_regular"
            android:text="@string/max_video"
            android:textAlignment="center"
            android:textColor="#7180AF"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/below_layout"
        android:layout_above="@+id/terms_and_condition_retake"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp">

        <Button
            android:id="@+id/upload_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/blue_round_button"
            android:fontFamily="@font/opensans_semibold"
            android:padding="10dp"
            android:text="@string/upload"
            android:textAllCaps="false"
            android:textColor="@color/colorTopBarTut1"
            android:textSize="20sp"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/upload_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/button_retake"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="0.5"
                android:background="@drawable/stroke_border_button"
                android:fontFamily="@font/opensans_semibold"
                android:padding="10dp"
                android:text="@string/retake"
                android:textAllCaps="false"
                android:textColor="@color/instruction_black_color"
                android:textSize="20sp" />

            <Button
                android:id="@+id/tv_ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="0.5"
                android:background="@drawable/blue_round_button"
                android:fontFamily="@font/opensans_semibold"
                android:padding="10dp"
                android:text="@string/yes_con"
                android:textAllCaps="false"
                android:textColor="@color/white_color"
                android:textSize="20sp" />

            </LinearLayout>

        </RelativeLayout>

    <LinearLayout
        android:id="@+id/terms_and_condition_retake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="7dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="Â©"
            android:textColor="@color/charcol_blue"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:gravity="center_vertical"
            android:text="@string/powered_by"
            android:textColor="@color/charcol_blue"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/shufti_tm_retake"
            android:layout_width="70dp"
            android:layout_height="22dp"
            android:layout_marginLeft="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_shufti_tm" />
    </LinearLayout>


</RelativeLayout>
