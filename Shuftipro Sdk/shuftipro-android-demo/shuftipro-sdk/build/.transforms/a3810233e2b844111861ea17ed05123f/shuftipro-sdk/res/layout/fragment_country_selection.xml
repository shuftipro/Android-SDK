<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    android:orientation="vertical"
    tools:context="com.shutipro.sdk.fragments.SupportedTypesFragment">

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/opensans_semibold"
        android:gravity="center"
        android:text="@string/verification"
        android:textColor="@color/charcol_blue"
        android:textSize="20dp"
        android:textStyle="bold"
        android:visibility="visible" />


    <TextView
        android:id="@+id/selection_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/country"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="31dp"
        android:fontFamily="@font/opensans_bold"
        android:gravity="center_vertical"
        android:text="Select your country"
        android:textColor="@color/charcol_blue"
        android:textSize="22dp"
        android:textStyle="bold"
        android:visibility="visible" />

    <EditText
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/selection_text"
        android:layout_marginHorizontal="31dp"
        android:layout_marginVertical="20dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="31dp"
        android:background="@drawable/search_border"
        android:drawableLeft="@drawable/ic_baseline_search"
        android:hint="Search"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="15dp"
        android:textSize="18dp" />


        <androidx.recyclerview.widget.RecyclerView
            android:id ="@+id/country_list"
            android:layout_width ="match_parent"
            android:layout_height ="wrap_content"
            android:divider="@null"
            android:layout_below="@id/search_bar"/>

</RelativeLayout>