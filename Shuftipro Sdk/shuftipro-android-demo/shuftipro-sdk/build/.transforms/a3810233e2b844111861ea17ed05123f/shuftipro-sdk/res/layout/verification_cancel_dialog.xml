<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000">
    <TextView
        android:id="@+id/tv_message_response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/responseImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:text="Are you sure to cancel Verification Process"
        android:textColor="@color/instruction_text_color"
        android:textSize="19sp"
        android:gravity="center"
        android:padding="10dp"/>
    <TextView
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:layout_below="@+id/tv_message_response"
        android:text="Go back"
        android:layout_marginRight="20dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/white_color"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/tv_message_response"
        android:text="Cancel Verification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
</RelativeLayout>