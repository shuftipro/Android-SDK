<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/colorTopBarTut1"
    android:focusable="true">
    <RelativeLayout
        android:id="@+id/headingLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">
        <TextView
            android:id="@+id/headingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/charcol_blue"
            android:text="Verification"
            android:textSize="20sp"
            android:fontFamily="@font/opensans_semibold"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="10px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/main_image"
            android:src="@drawable/face_icon" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/verification_image_border"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginRight="30dp"
            android:id="@+id/first_line"
            android:text="@string/ready_to_take_photo"
            android:layout_marginLeft="30dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/opensans_bold"
            android:layout_marginTop="20dp"
            android:textColor="@color/charcol_blue"
            android:textSize="22dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/verification_image_border"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginRight="30dp"
            android:id="@+id/second_line"
            android:text="@string/ready_to_take_face_image"
            android:layout_marginLeft="30dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/opensans_regular"
            android:layout_marginTop="20dp"
            android:textColor="@color/charcol_blue"
            android:textSize="16sp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_round_button"
            android:text="Yes, I'm Ready"
            android:id="@+id/ready_btn"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/opensans_semibold"
            android:textSize="23sp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textAllCaps="false"
            android:textColor="@color/colorTopBarTut1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/stroke_border"
            android:text="Skip"
            android:id="@+id/skip_btn"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:fontFamily="@font/opensans_semibold"
            android:textSize="23sp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textAllCaps="false"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/terms_and_condition_retake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="7dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="Â©"
            android:textColor="@color/charcol_blue"
            android:textSize="14sp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:gravity="center_vertical"
            android:text="Powered by"
            android:textColor="@color/charcol_blue"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/shufti_tm_retake"
            android:layout_width="70dp"
            android:layout_height="22dp"
            android:layout_marginLeft="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_shufti_tm" />
    </LinearLayout>
</RelativeLayout>